var app = angular.module("picksleagueApp", ['ngResource', 'ngRoute']);

app.config(['$routeProvider', function($routeProvider){
  $routeProvider
  .when("/", {
    templateUrl: "<%= asset_path('angular/templates/home.html') %>",
    controller: "HomeController"
  })
  .when("/teams", {
    templateUrl: "<%= asset_path('angular/templates/teams.html') %>",
    controller: "TeamController"
  })
  .when("/teams/:id", {
    templateUrl: "<%= asset_path('angular/templates/one-team.html') %>",
    controller: "OneTeamController"
  })
  .when("/matchups/new", {
    templateUrl: "<%= asset_path('angular/templates/new-matchup.html') %>",
    controller: "NewMatchupController"
  })
  .when("/matchups", {
    templateUrl: "<%= asset_path('angular/templates/matchups.html') %>",
    controller: "MatchupController"
  })
  // .when("/matchups/:id", {
  //   templateUrl: "<%= asset_path('angular/templates/matchups.html') %>",
  //   controller: "MatchupController"
  // })
  .otherwise({
    redirectTo: "/"
  })
}]);